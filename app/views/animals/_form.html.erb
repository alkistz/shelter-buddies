
<%= form_for(@animal) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :animal_type %>
  <%= f.text_field :animal_type %>
  <%= f.label :race %>
  <%= f.text_field :race %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :age %>
  <%= f.number_field :age %>
  <%= f.label :size %>
  <%= f.text_field :size %>

  <%= f.submit %>
<% end %>
