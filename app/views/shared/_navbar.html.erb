<div class="navbar-global">
  <div class="navbar-lewagon navbar navbar-expand-sm navbar-light">
    <p class="navbar-brand"><%= link_to '<i class="fas fa-dog"></i>'.html_safe,root_path(), class: 'nav-link' %></p>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Home', root_path(), class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Find an animal', shelters_index_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <p class="nav-link">Help</p>
        </li>
        <% if volunteer_signed_in? %>
          <li class="nav-item">
            <%= link_to "My Bookings", volunteer_signed_in? ? volunteer_bookings_path : shelter_my_bookings_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Go to dashboard", volunteers_show_path(current_volunteer), class: "dropdown-item" %>
              <%= link_to "My favorite animals", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_volunteer_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% elsif shelter_signed_in? %>
          <li class="nav-item">
            <%= link_to "My Bookings", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Go to dashboard", shelters_show_path(current_shelter), class: "dropdown-item" %>
              <%= link_to "Favorite volunteers", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_shelter_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item dropdown">
            <%= image_tag "login_icon.jpeg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Volunteer: Sign-up", new_volunteer_registration_path, class: "dropdown-item" %>
              <%= link_to "Volunteer: Login", new_volunteer_session_path, class: "dropdown-item" %>
              <%= link_to "Shelter: Sign-up", new_shelter_registration_path, class: "dropdown-item" %>
              <%= link_to "Shelter: Login", new_shelter_session_path, class: "dropdown-item" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
